<Window x:Class="prog6212_task_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prog6212_task_1"
        mc:Ignorable="d"
        Title="Semester Information" Height="450" Width="800">

    <StackPanel Margin="80">
        <TextBlock
            Padding="3"
            FontSize="15">
            When does the semester start?
        </TextBlock>
        <DatePicker
            x:Name="startDatePicker"
            FontSize="15"/>

        <TextBlock
            Padding="3"
            FontSize="15"
            Margin="0, 30 ,0 ,0">
            How many weeks are in this semester?
        </TextBlock>
        <TextBox
            x:Name="numWeeksTextbox"
            FontSize="15"/>

        <Button x:Name="submitButton"
                FontSize="15"
                Margin="0, 30 ,0 ,0"
                HorizontalAlignment="Center"
                Width="100" Click="submitButton_Click">

            Submit
        </Button>
        <TextBlock x:Name="errorTextBlock" Margin="0, 20, 0 ,0" HorizontalAlignment="Center" Foreground="Red"></TextBlock>
    </StackPanel>
</Window>

